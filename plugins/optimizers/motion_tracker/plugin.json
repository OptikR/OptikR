{
    "name":  "motion_tracker",
    "display_name":  "Motion Tracker \u0026 Overlay Follower",
    "version":  "1.0.0",
    "type":  "optimizer",
    "target_stage":  "pipeline",
    "stage":  "pre",
    "description":  "Tracks content motion and updates overlay positions without re-OCR. Perfect for manga/comic reading! Reduces OCR calls by 50-80% during scrolling.",
    "author":  "OptikR Team",
    "enabled":  false,
    "use_case":  "manga_reading",
    "use_case_description":  "‚≠ê BEST FOR MANGA READING - Smoothly follows scrolling text without constant re-OCR",
    "settings":  {
                     "motion_threshold":  {
                                              "type":  "float",
                                              "default":  0.05,
                                              "min":  0.01,
                                              "max":  0.2,
                                              "description":  "Minimum frame difference to detect motion (lower = more sensitive)"
                                          },
                     "max_motion_distance":  {
                                                 "type":  "int",
                                                 "default":  200,
                                                 "min":  50,
                                                 "max":  500,
                                                 "description":  "Maximum pixel distance to track motion (prevents false positives)"
                                             },
                     "skip_ocr_on_motion":  {
                                                "type":  "bool",
                                                "default":  true,
                                                "description":  "Skip OCR when only motion detected (huge performance boost)"
                                            },
                     "update_overlay_positions":  {
                                                      "type":  "bool",
                                                      "default":  true,
                                                      "description":  "Move overlays to follow motion (smooth scrolling experience)"
                                                  },
                     "motion_smoothing":  {
                                              "type":  "float",
                                              "default":  0.3,
                                              "min":  0.0,
                                              "max":  1.0,
                                              "description":  "Smooth motion tracking (0=instant, 1=very smooth)"
                                          },
                     "reocr_after_stop":  {
                                              "type":  "bool",
                                              "default":  true,
                                              "description":  "Re-OCR when motion stops to verify accuracy"
                                          },
                     "stop_threshold_seconds":  {
                                                    "type":  "float",
                                                    "default":  0.5,
                                                    "min":  0.1,
                                                    "max":  2.0,
                                                    "description":  "Seconds of no motion before triggering re-OCR"
                                                }
                 },
    "dependencies":  [

                     ],
    "performance_impact":  {
                               "cpu":  -50,
                               "memory":  0,
                               "latency":  -30,
                               "description":  "Reduces CPU by 50% and latency by 30% during scrolling"
                           },
    "recommended_for":  [
                            "manga_reading",
                            "comic_reading",
                            "scrolling_content",
                            "panning_content"
                        ],
    "not_recommended_for":  [
                                "static_content",
                                "video_subtitles",
                                "rapidly_changing_content"
                            ]
}
