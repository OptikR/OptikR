{
    "name": "batch_processing",
    "display_name": "Batch Processing Optimizer",
    "version": "1.0.0",
    "type": "optimizer",
    "target_stage": "translation",
    "stage": "pre",
    "description": "Batches multiple frames for processing together. Improves GPU utilization and throughput by 30-50%.",
    "author": "OptikR Team",
    "enabled": false,
    "settings": {
        "max_batch_size": {
            "type": "int",
            "default": 8,
            "min": 2,
            "max": 32,
            "description": "Maximum frames per batch"
        },
        "max_wait_time_ms": {
            "type": "float",
            "default": 10.0,
            "min": 1.0,
            "max": 100.0,
            "description": "Maximum wait time to form batch (ms)"
        },
        "min_batch_size": {
            "type": "int",
            "default": 2,
            "min": 1,
            "max": 16,
            "description": "Minimum frames to form batch"
        },
        "adaptive": {
            "type": "bool",
            "default": true,
            "description": "Adapt batch size based on performance"
        }
    },
    "performance": {
        "benefit": "30-50% faster processing",
        "overhead": "10ms max wait time",
        "memory": "Buffers up to max_batch_size frames"
    }
}