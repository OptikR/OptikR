{
    "name":  "work_stealing",
    "display_name":  "Work-Stealing Pool Optimizer",
    "version":  "1.0.0",
    "type":  "optimizer",
    "target_stage":  "pipeline",
    "stage":  "global",
    "description":  "Load balancing across worker threads. Improves CPU utilization by 15-25%.",
    "author":  "OptikR Team",
    "enabled":  false,
    "settings":  {
                     "num_workers":  {
                                         "type":  "int",
                                         "default":  4,
                                         "min":  2,
                                         "max":  16,
                                         "description":  "Number of worker threads"
                                     },
                     "steal_threshold":  {
                                             "type":  "int",
                                             "default":  2,
                                             "min":  1,
                                             "max":  10,
                                             "description":  "Minimum queue size before stealing"
                                         },
                     "enable_affinity":  {
                                             "type":  "bool",
                                             "default":  false,
                                             "description":  "Pin threads to CPU cores"
                                         }
                 },
    "performance":  {
                        "benefit":  "15-25% better CPU utilization",
                        "overhead":  "Minimal (work stealing logic)",
                        "memory":  "Per-worker queues"
                    }
}
